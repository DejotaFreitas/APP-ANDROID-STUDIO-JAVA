<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xpto.raxapp.menu.MenuPrincipal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <ImageButton
            android:id="@+id/pessoa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
             android:scaleType="centerInside"
            android:src="@drawable/pessoa"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@null"/>


        <ImageButton
            android:id="@+id/jogador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
               android:scaleType="centerInside"
            android:src="@drawable/jogador"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@null"/>



        <ImageButton
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:scaleType="centerInside"
            android:src="@drawable/time"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@null"/>



        <ImageButton
            android:id="@+id/timefora"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:scaleType="centerInside"
            android:src="@drawable/sorte"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@null"/>


        <ImageButton
            android:id="@+id/cronometro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:scaleType="centerInside"
            android:src="@drawable/cronometro"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="#EEEEEE"/>



    </LinearLayout>

</FrameLayout>
