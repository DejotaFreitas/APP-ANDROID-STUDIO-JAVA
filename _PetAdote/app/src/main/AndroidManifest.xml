<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dejota.petadote">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menuretratil.MenuRetratil"
            android:screenOrientation="portrait" />
        <activity
            android:name=".acesso.Cadastro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".acesso.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".notificacao.NotificacaoSucesso"
            android:screenOrientation="portrait" />
        <activity
            android:name=".notificacao.NotificacaoErro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".conteudo2.CadastroPet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".conteudo2.PetProfile"
            android:screenOrientation="portrait" />
        <activity android:name=".conteudo2.AdocaoHistorico" />
        <activity android:name=".conteudo2.MeuPetAdotantes" />
        <activity android:name=".conteudo2.ConfirmarDoacao"></activity>
    </application>

</manifest>