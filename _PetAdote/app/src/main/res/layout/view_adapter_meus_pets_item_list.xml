<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:padding="3dp"
    android:background="@color/branco">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/meus_pets_item_list_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/icon"
            android:scaleType="centerInside"
            android:background="@color/branco"
            android:padding="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="5dp">
        <TextView
            android:id="@+id/meus_pets_item_list_nome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nome"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/meus_pets_item_list_tipo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tipo"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/meus_pets_item_list_genero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Genero"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meus_pets_item_list_adotantes"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/lista_adocao">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fila de \n Adoção"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/branco"
            android:textAlignment="center"
            android:gravity="bottom"/>

        <TextView
            android:id="@+id/meus_pets_item_list_fila_adocao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@color/branco"
            android:textAlignment="center"
            android:gravity="top" />
    </LinearLayout>

</LinearLayout>
